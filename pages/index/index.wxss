/**index.wxss**/
page {
    background-color: #fff;
}

.home-search {
    width: 100%;
    height: 96rpx;
    background-color: #fff;
    padding: 0 30rpx 10rpx;
    box-sizing: border-box;
    position: relative;
    display: flex;
    align-items: center;
}

.home-search .search-container {
    position: relative;
    height: 70rpx;
    width: 100%;
}

.home-search .search-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 40rpx;
    top: 15rpx;
    background: url('data:image/png;base64,') no-repeat;
    background-size: contain;
}

.home-search .search-input {
    width: 100%;
    height: 100%;
    background-color: #edf0f4;
    border-radius: 35rpx;
    padding: 5rpx 40rpx 5rpx 100rpx;
    box-sizing: border-box;
    font-size: 32rpx;
}

.home-search .placeholder {
    font-size: 32rpx;
    color: #999999
}
.banner-container{
    position: relative;
}

.banner {
    height: 380rpx;
    background-color: #fff;
}

.banner image {
    width: 100%;
    height: 100%;
}

.banner .banner-title {
    width: 100%;
    height: 60rpx;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 60rpx;
    color: white;
    padding-left: 20rpx;
    position: absolute;
    bottom: 0;
    font-size: 28rpx;
}
.banner-indicator{
    height: 60rpx;
    line-height: 60rpx;
    color: white;
    font-size: 24rpx;
    position: absolute;
    bottom: 0;
    right: 20rpx;
}